{
  "name": "flowable-dashboard",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@boomerang-io/carbon-addons-boomerang-react": "1.2.3",
    "@boomerang-io/styles": "^0.0.2",
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@cypress/webpack-preprocessor": "^5.4.1",
    "@testing-library/cypress": "^6.0.0",
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^10.2.1",
    "@testing-library/react-hooks": "^3.3.0",
    "@testing-library/user-event": "^12.0.2",
    "axios": "0.21.1",
    "carbon-components": "10.41.0",
    "carbon-components-react": "7.41.0",
    "classnames": "2.2.6",
    "commitizen": "4.0.3",
    "copyfiles": "2.3.0",
    "cross-env": "7.0.2",
    "cypress": "^8.3.1",
    "cz-conventional-changelog": "3.1.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-jest": "^23.11.0",
    "eslint-plugin-jest-dom": "3.0.1",
    "eslint-plugin-testing-library": "3.3.0",
    "find-webpack": "^2.0.0",
    "formik": "^2.2.9",
    "http-proxy-middleware": "^1.0.4",
    "jest-axe": "^3.4.0",
    "lint-staged": "10.1.1",
    "miragejs": "0.1.40",
    "moment-timezone": "^0.5.31",
    "node-sass": "4.14.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "prop-types": "15.7.2",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-helmet": "^5.2.1",
    "react-query": "2.23.1",
    "react-query-devtools": "^2.6.0",
    "react-router-dom": "5.2.0",
    "react-scripts": "4.0.3",
    "replace-in-file": "^3.4.3",
    "source-map-explorer": "2.4.2",
    "start-server-and-test": "^1.10.11",
    "yup": "^0.28.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "tsc",
    "test": "react-scripts test --env=jsdom-fourteen",
    "eject": "react-scripts eject",
    "analyze": "source-map-explorer server/build/static/js/main.*",
    "postbuild": "copyfiles build/**/*.* server",
    "cm": "git cz",
    "cypress": "cypress open",
    "cypress:run": "$(yarn bin)/cypress run --config video=false",
    "docker": "run-p docker:run",
    "docker:build": "docker build -t webapp .",
    "docker:run": "docker run -i -t -p 3000:3000 -e APP_ROOT=/app webapp",
    "lint": "eslint -f json -o lint-report.json ./src",
    "predocker": "run-s build docker:build",
    "preprod": "run-s build prod:installServerDependencies prod:rewriteAssetPaths",
    "prod": "run-p prod:server",
    "prod:installServerDependencies": "yarn --prefix ./server install ./server",
    "prod:rewriteAssetPaths": "cross-env APP_ROOT=/app node server/scripts/rewriteAssetPaths.js",
    "prod:server": "cd server && yarn run-script dev",
    "test:ci": "react-scripts test --coverage --env=jsdom-fourteen",
    "test:ci-cypress": "start-server-and-test dev http://localhost:3000 cypress:run",
    "test:staged": "cross-env CI=true react-scripts test --passWithNoTests --findRelatedTests --bail --env=jsdom-fourteen"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "https://launch.boomerangplatform.net/BMRG_APP_ROOT_CONTEXT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "!**/*.spec.{js,jsx}",
      "!**/Assets/**",
      "!**/ApiServer/**",
      "**/src/Components/**/*.{js,jsx}",
      "**/src/Features/**/*.{js,jsx}",
      "**/src/Hooks/**/*.{js,jsx}",
      "**/src/State/**/*.{js,jsx}",
      "**/src/Utils/**/*.{js,jsx}"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,json,scss,css,md}": [
      "prettier --print-width 120 --write"
    ],
    "src/**/*.{js,jsx}": [
      "npm run-script lint",
      "npm run-script test:staged"
    ]
  },
  "devDependencies": {
    "@types/carbon-components-react": "^7.36.1",
    "@types/carbon__icons-react": "^10.31.2",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-helmet": "^6.1.2",
    "@types/react-router-dom": "^5.1.8",
    "typescript": "^4.4.2"
  }
}
